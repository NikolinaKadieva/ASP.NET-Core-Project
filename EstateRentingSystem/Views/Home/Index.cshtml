@model IndexViewModel

@{
    ViewBag.Title = "Welcome!";
}

@if (!Model.Estates.Any())
{
<div class="jumbotron">
    <h1 class="display-4">Welcome to the best place for renting estates!</h1>
    <p class="lead">There are no estates in the system currently available, so why don't you just add one?</p>
    <hr class="my-4">
    <p class="lead">
        <a asp-controller="Estates" asp-action="Add" class="btn btn-primary btn-lg" role="button">Add Estate</a>
    </p>
</div>
}

<div class="mb-5"></div>

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        @for(int i = 0; i < Model.Estates.Count; i++)
        {
            var estate = Model.Estates[i];
            <div class="carousel-item @(i == 0 ? "active" : string.Empty)">
                <img class="d-block w-100" src="@estate.ImageUrl" alt="@estate.Type @estate.TypeOfConstruction">
                <div class="carousel-caption d-none d-md-block">
                    <h5><a class="btn btn-primary" asp-controller="Estates" asp-action="Details" asp-route-id="@estate.Id">@estate.Type @estate.TypeOfConstruction (@estate.YearOfConstruction)</a></h5>
                </div>
            </div>
        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="mb-5"></div>

<div class="jumbotron">
    <div class="row">
        <h2 class="col-md-4 text-center">
            @Model.TotalEstates Estates
        </h2>
        <h2 class="col-md-4 text-center">
            @Model.TotalUsers Users
        </h2>
        <h2 class="col-md-4 text-center">
            @Model.TotalRents Rents
        </h2>
    </div>
</div>