@model IndexViewModel

@{
    ViewData["Title"] = "Welcome!";
}

@{
    var estates = Model.Estates;
    var firstEstate = estates.Any() ? estates[0] : null;
    var secondEstate = estates.Count > 1 ? estates[1] : null;
    var thirdEstate = estates.Count > 2 ? estates[2] : null;
}

@if (!estates.Any())
{
<div class="jumbotron">
    <h1 class="display-4">Welcome to the best place for renting estates!</h1>
    <p class="lead">There are no estates in the system currently available, so why don't you just add one?</p>
    <hr class="my-4">
    <p class="lead">
        <a asp-controller="Estates" asp-action="Add" class="btn btn-primary btn-lg" role="button">Add Estate</a>
    </p>
</div>
}

<div class="mb-5"></div>

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        @if (firstEstate != null)
        {
            <div class="carousel-item active">
                <img class="d-block w-100" src="@firstEstate.ImageUrl" alt="@firstEstate.Type @firstEstate.TypeOfConstruction">
                <div class="carousel-caption d-none d-md-block">
                    <h5><a class="btn btn-primary" asp-controller="Estates" asp-action="Details" asp-route-id="@firstEstate.Id">@firstEstate.Type @firstEstate.TypeOfConstruction (@firstEstate.YearOfConstruction)</a></h5>
                </div>
            </div>
        }
        @if (secondEstate != null)
        {
            <div class="carousel-item">
                <img class="d-block w-100" src="@secondEstate.ImageUrl" alt="@secondEstate.Type @secondEstate.TypeOfConstruction">
                <div class="carousel-caption d-none d-md-block">
                    <h5><a class="btn btn-primary" asp-controller="Estates" asp-action="Details" asp-route-id="@secondEstate.Id">@secondEstate.Type @secondEstate.TypeOfConstruction (@secondEstate.YearOfConstruction)</a></h5>
                </div>
            </div>
        }
        @if (thirdEstate != null)
        {
            <div class="carousel-item">
                <img class="d-block w-100" src="@thirdEstate.ImageUrl" alt="@thirdEstate.Type @thirdEstate.TypeOfConstruction">
                <div class="carousel-caption d-none d-md-block">
                    <h5><a class="btn btn-primary" asp-controller="Estates" asp-action="Details" asp-route-id="@thirdEstate.Id">@secondEstate.Type @secondEstate.TypeOfConstruction (@secondEstate.YearOfConstruction)</a></h5>
                </div>
            </div>
        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="mb-5"></div>

<div class="jumbotron">
    <div class="row">
        <h2 class="col-md-4 text-center">
            @Model.TotalEstates Estates
        </h2>
        <h2 class="col-md-4 text-center">
            @Model.TotalUsers Users
        </h2>
        <h2 class="col-md-4 text-center">
            @Model.TotalRents Rents
        </h2>
    </div>
</div>